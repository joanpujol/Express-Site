extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= common.profileName
        p.lead.text-light
          | #{about.title}

        .portfolio-bio
          p
            | #{about.bio}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills
        ul
          each skill in about.skills
            li= skill
        h6 Contact Info
        ul
          li= about.email
          li= about.number
        a.button.expanded(href=about.linkedInURL) LinkedIn
        a.button.expanded(href=about.githubURL) GitHub
        a.button.expanded(href=about.twitterURL) Twitter

  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  